                  android:layout_marginTop="20dp"
                  android:orientation="horizontal">

                     <TextView
                         android:layout_width="200dp"
                         android:layout_height="wrap_content"
                         android:text="채용 불가"
                         android:textSize="20dp" />

                     <RadioButton
                         android:id="@+id/eva_5"
                         android:layout_width="wrap_content"
